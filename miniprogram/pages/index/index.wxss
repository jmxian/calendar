/**index.wxss**/
.event{
  padding: 0px 10px;
}
.form-title{
  width: 100%;
  height: auto;
  padding:15px 0px;
  text-align: center;
}
.icon-add{
  position: fixed;
  z-index: 9999;
  font-size: 48px !important;
  bottom: 40px;
  left: 50%;
  transform: translateX(-50%);
}
.page {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #fff;
}
.mask{
  position: fixed;
  width: 100%;
  height: 100vh;
  z-index: 9999;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5);
}
.form{
  position: fixed;
  width: 80%;
  height: 60vh;
  top: 20vh;
  margin-left: 10%;
  background-color: rgba(255, 255, 255, 1);
  z-index: 9999;
}