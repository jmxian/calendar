/* components/calendar/calendar.wxss */
@import "../../colorui/icon.wxss";
@import "../../colorui/main.wxss";
.event{
  position: relative;
  width: 100%;
  height: 50px;
  display: flex;
  align-items: center;
  background-color: #fff;
  margin-top: 10px;
  margin-bottom: 10px;
}
.tip{
  position: absolute;
  width: 10px;
  height: 10px;
  top: 5px;
  right: 5px;
  font-size: 8px;
  border-radius: 50%;
  text-align: center;
  line-height: 10px;
}
.time{
  position: absolute;
  font-size: 12px;
  color: #ccc;
  right: 10px;
}
.squarecheck,.delete{
  width: 80px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
}
.btn-box{
  position: absolute;
  left: 750rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 160px;
  height: 40px;
}
@keyframes leftSlider {
  from {
    left: 0px;
  }

  to {
    left: -160px;
    padding-left: 160px;
  }
}

@keyframes rightSlider {
  from {
    left: -160px;
   
  }

  to {
    left: 0px;
   
  }
}
.shu{
  width: 3px;
  height: 30px;
  margin: 0 10px;
  
}
.week{
  width: 100%;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  background:linear-gradient(to right, #bb313e25, #bb313e25, #d7222925, #dd4a1625, #e4761525, #f5c50025, #f0e92725, #b1ce2425, #48a93525, #03944525, #157c4f25, #176a5825, #1b556325, #1d386f25, #1d386f25, #20277825, #52266325, #8a244b25);
}
.date{
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  height: 150px;
  align-items: center;
  background: linear-gradient(to right, #a1c4fd 0%, #c2e9fb 100%);
  overflow: hidden;
}
.date-box{
  display: flex;
  width: 100%;
  height: auto;
  flex-flow: row wrap;
  z-index: -1;
  position: absolute;
  opacity: 0;
  left: -100%;
}
.day{
  position: relative;
  width: 14%;
  height: 30px;
  line-height: 30px;
  text-align: center;
  box-sizing: border-box;
  color: #fff;
}
.show{
  position: relative;
  opacity: 1;
  z-index: 9999;
  left: 0;
}
@keyframes show{
  form{
    height:30px;
  }
  to{
    height:150px;
  }
}
@keyframes hide{
  form{
    height: 150px;
  }
  to{
    height: 30px;
  }
}